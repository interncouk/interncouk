files:
  "/etc/nginx/conf.d/custom.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      location / {
        if (!-e $request_filename){
          rewrite ^(.*)$ /index.php?$1 last;
        }
      }

      location /public {
        try_files $uri $uri/ /public/index.php?$query_string;
      }